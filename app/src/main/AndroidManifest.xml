<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.demo.androiddesignlibrary"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- http://hmkcode.com/android-textinputlayout/ -->
    <!--
 http://antonioleiva.com/floating-action-button/
         https://guides.codepath.com/android/Floating-Action-Buttons
    -->

    <uses-sdk tools:overrideLibrary="com.quinny898.library.persistentsearch"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.WithoutActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ListActivity"/>

        <activity android:name=".ScrollableActivity1"
            android:theme="@style/AppTheme.WithoutActionBar"/>

    </application>

</manifest>
